platform :ios, '9.0'

source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/TuyaInc/TYPublicSpecs.git'

target 'HachiIOTProject' do

    pod 'YYCategories'
    pod 'AFNetworking'
    pod 'MJRefresh'                      # 下拉刷新
    pod 'FMDB'                           # 存储框架
    pod 'YTKKeyValueStore'               # 针对FMDB的封装
    pod 'Masonry'                        # 布局框架
    pod 'InputKit'                       # 输入限制
    pod 'LYEmptyView'                    # 提示框UI框架
    pod 'SDWebImage'                     # 图片缓存框架
    pod 'WBHUDManager'                   # 提示框
    pod 'YYModel'                        # 数据解析框架
    pod 'GKCover'                        # 遮罩
    pod 'MJExtension'
    pod "TuyaSmartHomeKit"
end
